    <script>
        $(document).ready(function() {
            // Modal para adicionar atividade
            const modal = document.getElementById('activityModal');
            const addActivityBtn = document.getElementById('addActivityBtn');
            const cancelActivityBtn = document.getElementById('cancelActivityBtn');
            const closeModalBtn = document.querySelector('.close-modal');
            const saveActivityBtn = document.getElementById('saveActivityBtn');
            
            addActivityBtn.addEventListener('click', function() {
                modal.style.display = 'block';
                document.getElementById('activityForm').reset();
            });
            
            function closeModal() {
                modal.style.display = 'none';
            }
            
            closeModalBtn.addEventListener('click', closeModal);
            cancelActivityBtn.addEventListener('click', closeModal);
            
            window.addEventListener('click', function(event) {
                if (event.target === modal) {
                    closeModal();
                }
            });
            
            saveActivityBtn.addEventListener('click', function() {
                // Validar formulário
                const form = document.getElementById('activityForm');
                if (!form.checkValidity()) {
                    form.reportValidity();
                    return;
                }
                
                // Obter dados do formulário
                const type = document.getElementById('activityType').value;
                const title = document.getElementById('activityTitle').value;
                const description = document.getElementById('activityDescription').value;
                const result = document.getElementById('activityResult').value;
                
                // Em uma aplicação real, você enviaria esses dados para o servidor
                console.log('Nova atividade:', { type, title, description, result });
                
                // Simular adição de atividade à timeline
                const today = new Date().toLocaleDateString('pt-BR', { 
                    year: 'numeric', 
                    month: '2-digit', 
                    day: '2-digit' 
                }).replace(/\//g, '/');
                
                let iconClass = 'fas fa-comment';
                switch (type) {
                    case 'call':
                        iconClass = 'fas fa-phone';
                        break;
                    case 'meeting':
                        iconClass = 'fas fa-users';
                        break;
                    case 'email':
                        iconClass = 'fas fa-envelope';
                        break;
                }
                
                const newActivity = `
                    <div class="activity-item">
                        <div class="activity-icon">
                            <i class="${iconClass}"></i>
                        </div>
                        <div class="activity-content">
                            <div class="activity-header">
                                <h4>${title}</h4>
                                <span>${today}</span>
                            </div>
                            <p>${description}</p>
                            ${result ? `<p><strong>Resultado:</strong> ${result}</p>` : ''}
                        </div>
                    </div>
                `;
                
                $('.activity-timeline').prepend(newActivity);
                
                closeModal();
                alert('Atividade adicionada com sucesso!');
            });
            
            // Avançar estágio
            $('#advanceStageBtn').click(function() {
                if (confirm('Tem certeza que deseja avançar esta oportunidade para o estágio de Negociação?')) {
                    // Em uma aplicação real, você atualizaria o estágio no servidor
                    console.log('Avançando estágio para Negociação');
                    
                    // Atualizar a interface
                    $('.stage-item.active').removeClass('active').addClass('completed')
                        .find('.stage-icon i').removeClass('fa-spinner').addClass('fa-check');
                    
                    $('.stage-item:contains("Negociação")').addClass('active')
                        .find('.stage-icon i').removeClass('fa-hourglass').addClass('fa-spinner');
                    
                    $('.opportunity-status .status').text('Negociação');
                    $('.progress-bar').css('width', '70%');
                    
                    $(this).text('Avançar para Fechamento')
                        .attr('data-stage', 'fechamento');
                    
                    alert('Estágio atualizado com sucesso!');
                }
            });
            
            // Converter em venda
            $('#convertBtn').click(function() {
                if (confirm('Tem certeza que deseja converter esta oportunidade em venda?')) {
                    // Em uma aplicação real, você converteria a oportunidade em venda no servidor
                    console.log('Convertendo oportunidade em venda');
                    
                    setTimeout(() => {
                        window.location.href = '/sales';
                    }, 1000);
                    
                    alert('Oportunidade convertida em venda com sucesso!');
                }
            });
            
            // Upload documento
            $('#uploadDocumentBtn').click(function() {
                $('#documentFile').click();
            });
            
            $('#documentFile').change(function() {
                if (this.files.length > 0) {
                    const fileName = this.files[0].name;
                    console.log('Enviando documento:', fileName);
                    
                    // Em uma aplicação real, você faria o upload do arquivo para o servidor
                    
                    // Simular adição do documento à tabela
                    const today = new Date().toLocaleDateString('pt-BR', { 
                        year: 'numeric', 
                        month: '2-digit', 
                        day: '2-digit' 
                    }).replace(/\//g, '/');
                    
                    const fileType = fileName.split('.').pop().toUpperCase();
                    
                    const newRow = `
                        <tr>
                            <td>${fileName}</td>
                            <td>${fileType}</td>
                            <td>Vendedor 1</td>
                            <td>${today}</td>
                            <td class="actions">
                                <a href="#" class="btn-icon"><i class="fas fa-download"></i></a>
                                <a href="#" class="btn-icon delete-document" data-id="new"><i class="fas fa-trash"></i></a>
                            </td>
                        </tr>
                    `;
                    
                    $(newRow).prependTo('#activityModal + .card .table tbody');
                    
                    bindDeleteDocumentHandlers();
                    
                    alert('Documento enviado com sucesso!');
                }
            });
            
            // Excluir documento
            function bindDeleteDocumentHandlers() {
                $('.delete-document').off('click').on('click', function(e) {
                    e.preventDefault();
                    
                    if (confirm('Tem certeza que deseja excluir este documento?')) {
                        const documentId = $(this).data('id');
                        console.log('Excluindo documento ID:', documentId);
                        
                        // Em uma aplicação real, você excluiria o documento no servidor
                        
                        $(this).closest('tr').remove();
                        alert('Documento excluído com sucesso!');
                    }
                });
            }
            
            bindDeleteDocumentHandlers();
            
            // Marcar tarefa como concluída
            $('.complete-task').click(function(e) {
                e.preventDefault();
                
                const taskId = $(this).data('id');
                console.log('Marcando tarefa como concluída, ID:', taskId);
                
                // Em uma aplicação real, você atualizaria o status da tarefa no servidor
                
                $(this).closest('tr').find('td:nth-child(2) span')
                    .removeClass('pending')
                    .addClass('active')
                    .text('Concluída');
                
                $(this).remove();
                
                alert('Tarefa marcada como concluída!');
            });
            
            // Salvar notas
            $('#saveNotesBtn').click(function() {
                const notes = $('#opportunityNotes').val();
                console.log('Salvando notas:', notes);
                
                // Em uma aplicação real, você atualizaria as notas da oportunidade no servidor
                
                alert('Notas salvas com sucesso!');
            });
        });
    </script>
