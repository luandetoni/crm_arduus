<div class="dashboard">
    <%- include('../partials/sidebar') %>
    
    <div class="main-content">
        <%- include('../partials/header') %>
        
        <div class="content">
            <div class="d-flex align-center justify-between mb-20">
                <h1 class="page-title">Lista de Oportunidades</h1>
                <div>
                    <a href="/opportunities" class="btn btn-secondary mr-10">
                        <i class="fas fa-columns"></i> Visualizar Kanban
                    </a>
                    <a href="/opportunities/new" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Nova Oportunidade
                    </a>
                </div>
            </div>
            
            <div class="card mb-20">
                <div class="card-header">
                    <h3 class="card-title">Filtros</h3>
                </div>
                <div class="card-body">
                    <div class="form-row">
                        <div class="form-col">
                            <div class="form-group">
                                <label for="searchFilter" class="form-label">Buscar</label>
                                <input type="text" id="searchFilter" class="form-control" placeholder="Título, cliente...">
                            </div>
                        </div>
                        <div class="form-col">
                            <div class="form-group">
                                <label for="stageFilter" class="form-label">Estágio</label>
                                <select id="stageFilter" class="form-control">
                                    <option value="">Todos</option>
                                    <option value="prospecção">Prospecção</option>
                                    <option value="qualificação">Qualificação</option>
                                    <option value="proposta">Proposta</option>
                                    <option value="negociação">Negociação</option>
                                    <option value="fechada ganha">Fechada Ganha</option>
                                    <option value="fechada perdida">Fechada Perdida</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-col">
                            <div class="form-group">
                                <label for="assignedToFilter" class="form-label">Responsável</label>
                                <select id="assignedToFilter" class="form-control">
                                    <option value="">Todos</option>
                                    <option value="user1">Vendedor 1</option>
                                    <option value="user2">Vendedor 2</option>
                                    <option value="user3">Vendedor 3</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-col">
                            <div class="form-group">
                                <label class="form-label">&nbsp;</label>
                                <button id="filterButton" class="btn btn-primary btn-block">Filtrar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Pipeline de Oportunidades</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table" id="opportunitiesTable">
                            <thead>
                                <tr>
                                    <th>Título</th>
                                    <th>Cliente</th>
                                    <th>Estágio</th>
                                    <th>Valor</th>
                                    <th>Probabilidade</th>
                                    <th>Data de Fechamento</th>
                                    <th>Responsável</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Renovação de contrato anual</td>
                                    <td>Tech Solutions</td>
                                    <td><span class="status pending">Proposta</span></td>
                                    <td>R$ 12.800,00</td>
                                    <td>70%</td>
                                    <td>15/06/2025</td>
                                    <td>Vendedor 1</td>
                                    <td class="actions">
                                        <a href="/opportunities/1" class="btn-icon"><i class="fas fa-eye"></i></a>
                                        <a href="/opportunities/1/edit" class="btn-icon"><i class="fas fa-edit"></i></a>
                                        <a href="#" class="btn-icon delete-opportunity" data-id="1"><i class="fas fa-trash"></i></a>
                                        <a href="#" class="btn-icon convert-opportunity" data-id="1" title="Converter em Venda"><i class="fas fa-shopping-cart"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Projeto de consultoria</td>
                                    <td>Tech Solutions</td>
                                    <td><span class="status pending">Negociação</span></td>
                                    <td>R$ 5.000,00</td>
                                    <td>60%</td>
                                    <td>28/05/2025</td>
                                    <td>Vendedor 2</td>
                                    <td class="actions">
                                        <a href="/opportunities/2" class="btn-icon"><i class="fas fa-eye"></i></a>
                                        <a href="/opportunities/2/edit" class="btn-icon"><i class="fas fa-edit"></i></a>
                                        <a href="#" class="btn-icon delete-opportunity" data-id="2"><i class="fas fa-trash"></i></a>
                                        <a href="#" class="btn-icon convert-opportunity" data-id="2" title="Converter em Venda"><i class="fas fa-shopping-cart"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Venda de produtos básicos</td>
                                    <td>João Silva</td>
                                    <td><span class="status active">Qualificação</span></td>
                                    <td>R$ 499,95</td>
                                    <td>40%</td>
                                    <td>12/06/2025</td>
                                    <td>Vendedor 1</td>
                                    <td class="actions">
                                        <a href="/opportunities/3" class="btn-icon"><i class="fas fa-eye"></i></a>
                                        <a href="/opportunities/3/edit" class="btn-icon"><i class="fas fa-edit"></i></a>
                                        <a href="#" class="btn-icon delete-opportunity" data-id="3"><i class="fas fa-trash"></i></a>
                                        <a href="#" class="btn-icon convert-opportunity" data-id="3" title="Converter em Venda"><i class="fas fa-shopping-cart"></i></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    
                    <div class="d-flex justify-between align-center mt-20">
                        <div>
                            Mostrando 1-3 de 3 registros
                        </div>
                        <div class="pagination">
                            <button class="btn btn-primary" disabled>Anterior</button>
                            <button class="btn btn-primary" disabled>Próximo</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function() {
        // Filtrar oportunidades
        $('#filterButton').click(function() {
            console.log('Filtrando oportunidades...');
            
            const filters = {
                search: $('#searchFilter').val(),
                stage: $('#stageFilter').val(),
                assignedTo: $('#assignedToFilter').val()
            };
            
            console.log('Filtros:', filters);
            
            // Aqui faria a chamada à API e atualizaria a tabela
        });
        
        // Excluir oportunidade
        $('.delete-opportunity').click(function(e) {
            e.preventDefault();
            
            if (confirm('Tem certeza que deseja excluir esta oportunidade?')) {
                const opportunityId = $(this).data('id');
                console.log('Excluindo oportunidade ID:', opportunityId);
                
                // Aqui faria a chamada à API para excluir
            }
        });
        
        // Converter oportunidade em venda
        $('.convert-opportunity').click(function(e) {
            e.preventDefault();
            
            if (confirm('Tem certeza que deseja converter esta oportunidade em venda?')) {
                const opportunityId = $(this).data('id');
                console.log('Convertendo oportunidade ID:', opportunityId);
                
                // Aqui faria a chamada à API para converter
            }
        });
    });
</script>