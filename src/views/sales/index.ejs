<div class="dashboard">
    <%- include('../partials/sidebar') %>
    
    <div class="main-content">
        <%- include('../partials/header') %>
        
        <div class="content">
            <div class="d-flex align-center justify-between mb-20">
                <h1 class="page-title">Vendas</h1>
                <div>
                    <a href="/sales/new" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Nova Venda
                    </a>
                </div>
            </div>
            
            <div class="card mb-20">
                <div class="card-header">
                    <h3 class="card-title">Filtros</h3>
                </div>
                <div class="card-body">
                    <div class="form-row">
                        <div class="form-col">
                            <div class="form-group">
                                <label for="searchFilter" class="form-label">Buscar</label>
                                <input type="text" id="searchFilter" class="form-control" placeholder="Número, cliente...">
                            </div>
                        </div>
                        <div class="form-col">
                            <div class="form-group">
                                <label for="statusFilter" class="form-label">Status</label>
                                <select id="statusFilter" class="form-control">
                                    <option value="">Todos</option>
                                    <option value="rascunho">Rascunho</option>
                                    <option value="pendente">Pendente</option>
                                    <option value="pago">Pago</option>
                                    <option value="enviado">Enviado</option>
                                    <option value="entregue">Entregue</option>
                                    <option value="cancelado">Cancelado</option>
                                    <option value="reembolsado">Reembolsado</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-col">
                            <div class="form-group">
                                <label for="dateRangeFilter" class="form-label">Período</label>
                                <select id="dateRangeFilter" class="form-control">
                                    <option value="">Todos</option>
                                    <option value="today">Hoje</option>
                                    <option value="yesterday">Ontem</option>
                                    <option value="last7days">Últimos 7 dias</option>
                                    <option value="thisMonth">Este mês</option>
                                    <option value="lastMonth">Mês passado</option>
                                    <option value="custom">Personalizado</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-col">
                            <div class="form-group">
                                <label class="form-label">&nbsp;</label>
                                <button id="filterButton" class="btn btn-primary btn-block">Filtrar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Lista de Vendas</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table" id="salesTable">
                            <thead>
                                <tr>
                                    <th>Número</th>
                                    <th>Cliente</th>
                                    <th>Data</th>
                                    <th>Total</th>
                                    <th>Status</th>
                                    <th>Pagamento</th>
                                    <th>Responsável</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>VND-2505-00001</td>
                                    <td>Tech Solutions</td>
                                    <td>25/05/2025</td>
                                    <td>R$ 5.000,00</td>
                                    <td><span class="status active">Pago</span></td>
                                    <td>Transferência Bancária</td>
                                    <td>Vendedor 1</td>
                                    <td class="actions">
                                        <a href="/sales/1" class="btn-icon"><i class="fas fa-eye"></i></a>
                                        <a href="/sales/1/edit" class="btn-icon"><i class="fas fa-edit"></i></a>
                                        <a href="/sales/1/invoice" class="btn-icon" title="Gerar Fatura"><i class="fas fa-file-invoice"></i></a>
                                        <a href="/sales/1/receipt" class="btn-icon" title="Gerar Recibo"><i class="fas fa-file-alt"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>VND-2305-00002</td>
                                    <td>Ana Santos</td>
                                    <td>23/05/2025</td>
                                    <td>R$ 899,95</td>
                                    <td><span class="status pending">Pendente</span></td>
                                    <td>Boleto</td>
                                    <td>Vendedor 2</td>
                                    <td class="actions">
                                        <a href="/sales/2" class="btn-icon"><i class="fas fa-eye"></i></a>
                                        <a href="/sales/2/edit" class="btn-icon"><i class="fas fa-edit"></i></a>
                                        <a href="/sales/2/invoice" class="btn-icon" title="Gerar Fatura"><i class="fas fa-file-invoice"></i></a>
                                        <a href="/sales/2/receipt" class="btn-icon" title="Gerar Recibo"><i class="fas fa-file-alt"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>VND-2105-00003</td>
                                    <td>João Silva</td>
                                    <td>21/05/2025</td>
                                    <td>R$ 2.350,00</td>
                                    <td><span class="status active">Entregue</span></td>
                                    <td>Cartão de Crédito</td>
                                    <td>Vendedor 1</td>
                                    <td class="actions">
                                        <a href="/sales/3" class="btn-icon"><i class="fas fa-eye"></i></a>
                                        <a href="/sales/3/edit" class="btn-icon"><i class="fas fa-edit"></i></a>
                                        <a href="/sales/3/invoice" class="btn-icon" title="Gerar Fatura"><i class="fas fa-file-invoice"></i></a>
                                        <a href="/sales/3/receipt" class="btn-icon" title="Gerar Recibo"><i class="fas fa-file-alt"></i></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    
                    <div class="d-flex justify-between align-center mt-20">
                        <div>
                            Mostrando 1-3 de 3 registros
                        </div>
                        <div class="pagination">
                            <button class="btn btn-primary" disabled>Anterior</button>
                            <button class="btn btn-primary" disabled>Próximo</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

