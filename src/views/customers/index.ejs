<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <!-- Google Fonts - Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- Main CSS -->
    <link rel="stylesheet" href="/css/style.css">
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/images/favicon.png">
</head>
<body>
    <div class="dashboard">
        <%- include('../partials/sidebar') %>
        
        <div class="main-content">
            <%- include('../partials/header') %>
            
            <div class="content">
                <div class="d-flex align-center justify-between mb-20">
                    <h1 class="page-title">Clientes</h1>
                    <div>
                        <a href="/customers/new" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Novo Cliente
                        </a>
                    </div>
                </div>
                
                <div class="card mb-20">
                    <div class="card-header">
                        <h3 class="card-title">Filtros</h3>
                    </div>
                    <div class="card-body">
                        <div class="form-row">
                            <div class="form-col">
                                <div class="form-group">
                                    <label for="searchFilter" class="form-label">Buscar</label>
                                    <input type="text" id="searchFilter" class="form-control" placeholder="Nome, email, empresa...">
                                </div>
                            </div>
                            <div class="form-col">
                                <div class="form-group">
                                    <label for="statusFilter" class="form-label">Status</label>
                                    <select id="statusFilter" class="form-control">
                                        <option value="">Todos</option>
                                        <option value="ativo">Ativo</option>
                                        <option value="inativo">Inativo</option>
                                        <option value="potencial">Potencial</option>
                                        <option value="perdido">Perdido</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-col">
                                <div class="form-group">
                                    <label for="typeFilter" class="form-label">Tipo</label>
                                    <select id="typeFilter" class="form-control">
                                        <option value="">Todos</option>
                                        <option value="individual">Individual</option>
                                        <option value="business">Empresa</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-col">
                                <div class="form-group">
                                    <label class="form-label">&nbsp;</label>
                                    <button id="filterButton" class="btn btn-primary btn-block">Filtrar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Lista de Clientes</h3>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table" id="customersTable">
                                <thead>
                                    <tr>
                                        <th>Nome</th>
                                        <th>Email</th>
                                        <th>Telefone</th>
                                        <th>Empresa</th>
                                        <th>Status</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>João Silva</td>
                                        <td>joao.silva@example.com</td>
                                        <td>(11) 95555-1234</td>
                                        <td>Silva & Cia</td>
                                        <td><span class="status active">Ativo</span></td>
                                        <td class="actions">
                                            <a href="/customers/1" class="btn-icon"><i class="fas fa-eye"></i></a>
                                            <a href="/customers/1/edit" class="btn-icon"><i class="fas fa-edit"></i></a>
                                            <a href="#" class="btn-icon delete-customer" data-id="1"><i class="fas fa-trash"></i></a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Ana Santos</td>
                                        <td>ana.santos@example.com</td>
                                        <td>(21) 97777-4321</td>
                                        <td>-</td>
                                        <td><span class="status active">Ativo</span></td>
                                        <td class="actions">
                                            <a href="/customers/2" class="btn-icon"><i class="fas fa-eye"></i></a>
                                            <a href="/customers/2/edit" class="btn-icon"><i class="fas fa-edit"></i></a>
                                            <a href="#" class="btn-icon delete-customer" data-id="2"><i class="fas fa-trash"></i></a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Tech Solutions</td>
                                        <td>contato@techsolutions.com.br</td>
                                        <td>(11) 3333-4444</td>
                                        <td>Tech Solutions</td>
                                        <td><span class="status active">Ativo</span></td>
                                        <td class="actions">
                                            <a href="/customers/3" class="btn-icon"><i class="fas fa-eye"></i></a>
                                            <a href="/customers/3/edit" class="btn-icon"><i class="fas fa-edit"></i></a>
                                            <a href="#" class="btn-icon delete-customer" data-id="3"><i class="fas fa-trash"></i></a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        
                        <div class="d-flex justify-between align-center mt-20">
                            <div>
                                Mostrando 1-3 de 3 registros
                            </div>
                            <div class="pagination">
                                <button class="btn btn-primary" disabled>Anterior</button>
                                <button class="btn btn-primary" disabled>Próximo</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- jQuery (necessário para alguns plugins Bootstrap) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Main JavaScript -->
    <script src="/js/main.js"></script>
    <script>
        // Script específico para página de clientes
        $(document).ready(function() {
            // Filtrar clientes
            $('#filterButton').click(function() {
                // Em uma aplicação real, isso faria uma requisição à API
                // Por enquanto, apenas um log
                console.log('Filtrando clientes...');
                
                const filters = {
                    search: $('#searchFilter').val(),
                    status: $('#statusFilter').val(),
                    type: $('#typeFilter').val()
                };
                
                console.log('Filtros:', filters);
                
                // Aqui faria a chamada à API e atualizaria a tabela
            });
            
            // Excluir cliente
            $('.delete-customer').click(function(e) {
                e.preventDefault();
                
                if (confirm('Tem certeza que deseja excluir este cliente?')) {
                    const customerId = $(this).data('id');
                    console.log('Excluindo cliente ID:', customerId);
                    
