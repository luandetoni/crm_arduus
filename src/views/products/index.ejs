<div class="dashboard">
    <%- include('../partials/sidebar') %>
    
    <div class="main-content">
        <%- include('../partials/header') %>
        
        <div class="content">
            <div class="d-flex align-center justify-between mb-20">
                <h1 class="page-title">Produtos</h1>
                <div>
                    <a href="/products/new" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Novo Produto
                    </a>
                </div>
            </div>
            
            <div class="card mb-20">
                <div class="card-header">
                    <h3 class="card-title">Filtros</h3>
                </div>
                <div class="card-body">
                    <div class="form-row">
                        <div class="form-col">
                            <div class="form-group">
                                <label for="searchFilter" class="form-label">Buscar</label>
                                <input type="text" id="searchFilter" class="form-control" placeholder="Nome, SKU...">
                            </div>
                        </div>
                        <div class="form-col">
                            <div class="form-group">
                                <label for="categoryFilter" class="form-label">Categoria</label>
                                <select id="categoryFilter" class="form-control">
                                    <option value="">Todas</option>
                                    <option value="básico">Básico</option>
                                    <option value="premium">Premium</option>
                                    <option value="serviços">Serviços</option>
                                    <option value="assinaturas">Assinaturas</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-col">
                            <div class="form-group">
                                <label for="statusFilter" class="form-label">Status</label>
                                <select id="statusFilter" class="form-control">
                                    <option value="">Todos</option>
                                    <option value="ativo">Ativo</option>
                                    <option value="inativo">Inativo</option>
                                    <option value="descontinuado">Descontinuado</option>
                                    <option value="em estoque">Em Estoque</option>
                                    <option value="sem estoque">Sem Estoque</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-col">
                            <div class="form-group">
                                <label class="form-label">&nbsp;</label>
                                <button id="filterButton" class="btn btn-primary btn-block">Filtrar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Lista de Produtos</h3>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table" id="productsTable">
                            <thead>
                                <tr>
                                    <th>Nome</th>
                                    <th>SKU</th>
                                    <th>Categoria</th>
                                    <th>Preço</th>
                                    <th>Estoque</th>
                                    <th>Status</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Produto Básico</td>
                                    <td>PROD-001</td>
                                    <td>Básico</td>
                                    <td>R$ 99,99</td>
                                    <td>100</td>
                                    <td><span class="status active">Ativo</span></td>
                                    <td class="actions">
                                        <a href="/products/1" class="btn-icon"><i class="fas fa-eye"></i></a>
                                        <a href="/products/1/edit" class="btn-icon"><i class="fas fa-edit"></i></a>
                                        <a href="#" class="btn-icon delete-product" data-id="1"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Produto Premium</td>
                                    <td>PROD-002</td>
                                    <td>Premium</td>
                                    <td>R$ 199,99</td>
                                    <td>50</td>
                                    <td><span class="status active">Ativo</span></td>
                                    <td class="actions">
                                        <a href="/products/2" class="btn-icon"><i class="fas fa-eye"></i></a>
                                        <a href="/products/2/edit" class="btn-icon"><i class="fas fa-edit"></i></a>
                                        <a href="#" class="btn-icon delete-product" data-id="2"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Serviço de Consultoria</td>
                                    <td>SERV-001</td>
                                    <td>Serviços</td>
                                    <td>R$ 500,00</td>
                                    <td>-</td>
                                    <td><span class="status active">Ativo</span></td>
                                    <td class="actions">
                                        <a href="/products/3" class="btn-icon"><i class="fas fa-eye"></i></a>
                                        <a href="/products/3/edit" class="btn-icon"><i class="fas fa-edit"></i></a>
                                        <a href="#" class="btn-icon delete-product" data-id="3"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                                <tr>
                                    <td>Assinatura Mensal</td>
                                    <td>SUB-001</td>
                                    <td>Assinaturas</td>
                                    <td>R$ 49,99</td>
                                    <td>-</td>
                                    <td><span class="status active">Ativo</span></td>
                                    <td class="actions">
                                        <a href="/products/4" class="btn-icon"><i class="fas fa-eye"></i></a>
                                        <a href="/products/4/edit" class="btn-icon"><i class="fas fa-edit"></i></a>
                                        <a href="#" class="btn-icon delete-product" data-id="4"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    
                    <div class="d-flex justify-between align-center mt-20">
                        <div>
                            Mostrando 1-4 de 4 registros
                        </div>
                        <div class="pagination">
                            <button class="btn btn-primary" disabled>Anterior</button>
                            <button class="btn btn-primary" disabled>Próximo</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

